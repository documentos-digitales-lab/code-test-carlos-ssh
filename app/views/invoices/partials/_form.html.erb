<%= form_with model: @invoice, data: { controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper' } do |f| %>
    <%# <%= f.text_field :customer_id, value: @customer.id %>

    <div class="form-container">
        <div class="form-section">
            <%= f.label :sub_total, 'Sub Total' %>
            <%= f.number_field :sub_total %>
        </div>

        <div class="form-section">
            <%= f.label :tax, 'IVA' %>
            <%= f.number_field :tax %>
        </div>

        <div class="form-section">
        <%= f.label :total, 'Grand Total' %>
        <%= f.number_field :total %>
        </div>
        <div>
        <%= f.submit "Create An Invoice" %>
        </div>
    </div>
<% end %>
